<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Kermalis.MapEditor.UI.MessageBox"
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" CanResize="False">
  <StackPanel HorizontalAlignment="Center">
    <TextBlock HorizontalAlignment="Center" Name="Text"/>
    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Name="Buttons">
      <StackPanel.Styles>
        <Style Selector="Button">
          <Setter Property="Margin" Value="5"/>
        </Style>
      </StackPanel.Styles>
    </StackPanel>
  </StackPanel>
</Window>