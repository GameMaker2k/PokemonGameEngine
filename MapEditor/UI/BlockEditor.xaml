<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Kermalis.MapEditor.UI.BlockEditor"
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" Title="Block Editor">
  <Grid Margin="15">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock Grid.Column="1">Question:</TextBlock>
    <TextBox Grid.Column="1" Grid.Row="1" MinWidth="250">Answer</TextBox>

    <WrapPanel Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0,15,0,0">
      <Button IsDefault="True" MinWidth="60" Margin="0,0,10,0">_Ok</Button>
    </WrapPanel>
  </Grid>
</Window>