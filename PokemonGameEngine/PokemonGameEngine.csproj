<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <OutputType>Library</OutputType>
    <RootNamespace>Kermalis.PokemonGameEngine</RootNamespace>
    <Authors>Kermalis</Authors>
    <Copyright>Kermalis</Copyright>
    <RepositoryUrl>https://github.com/Kermalis/PokemonGameEngine</RepositoryUrl>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <NoWarn />
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <WarningsAsErrors>NU1605</WarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <EmbeddedResource Include="Assets\**" />
    <Content Include="Dependencies\PokemonBattleEngine.db">
      <Link>PokemonBattleEngine.db</Link>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <None Remove="Dependencies\**" />
    <PackageReference Include="Avalonia" Version="0.8.999-cibuild0003925-beta" />
    <PackageReference Include="Avalonia.Desktop" Version="0.8.999-cibuild0003925-beta" />
    <PackageReference Include="Microsoft.Data.Sqlite" Version="2.2.6" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <PackageReference Include="SQLitePCLRaw.bundle_e_sqlite3" Version="1.1.14" />
    <Reference Include="EndianBinaryIO">
      <HintPath>Dependencies\EndianBinaryIO.dll</HintPath>
    </Reference>
    <Reference Include="PokemonBattleEngine">
      <HintPath>Dependencies\PokemonBattleEngine.dll</HintPath>
    </Reference>
  </ItemGroup>
  
</Project>